{
  "manifest_version": 3,
  "name": "ODIN Side Panel",
  "version": "0.1.0",
  "description": "ODIN side panel for slide editors.",
  "action": {
    "default_title": "Open ODIN panel",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "panel-dist/index.html"
  },
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "https://api.odin.ai/*",
    "https://staging.odinlabs.id/*",
    "https://www.canva.com/*",
    "https://docs.google.com/presentation/*"
  ]
}
